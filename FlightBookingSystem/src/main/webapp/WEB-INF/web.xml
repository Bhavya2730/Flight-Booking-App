<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee     http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- Signup Servlet -->
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>com.mycompany.flightbookingsystem.servlets.SignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllBookingsServlet</servlet-name>
        <servlet-class>com.mycompany.flightbookingsystem.servlets.AllBookingsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.mycompany.flightbookingsystem.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!-- Search Flights Servlet -->
    <servlet>
        <servlet-name>SearchFlightsServlet</servlet-name>
        <servlet-class>com.mycompany.flightbookingsystem.servlets.SearchFlightsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchFlightsServlet</servlet-name>
        <url-pattern>/search-flights</url-pattern>
    </servlet-mapping>
    <!-- Book Flight Servlet -->
    <servlet>
        <servlet-name>BookFlightServlet</servlet-name>
        <servlet-class>com.mycompany.flightbookingsystem.servlets.BookFlightServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookFlightServlet</servlet-name>
        <url-pattern>/book-flight</url-pattern>
    </servlet-mapping>
    <!-- Default Welcome Page -->
    <servlet-mapping>
        <servlet-name>AllBookingsServlet</servlet-name>
        <url-pattern>/com.mycompany.flightbookingsystem.servlets.AllBookingsServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
